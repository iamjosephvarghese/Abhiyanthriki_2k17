<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_upload"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#555885"
    tools:context="roundmelon.jv.a3k.Selfie">


    <TextView
        android:text="Abhiyanthriki Season is Here!"
        android:layout_width="wrap_content"
        android:layout_height="83dp"
        android:id="@+id/textView1"
        android:layout_marginEnd="16dp"
        android:textStyle="bold"
        android:textSize="35dp"
        android:gravity="center_horizontal"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="16dp"
        android:textColor="#ffffff"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:text="We need a logo for A3K."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:textStyle="bold"
        android:textSize="25dp"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toBottomOf="@+id/textView1"
        android:layout_marginEnd="16dp"
        android:textColor="#ffffff"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="16dp" />

    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/name"
        android:textColor="#ffffff"
        android:background="#00C4C2"
        android:textStyle="bold"
        android:textColorHint="#ffffff"
        android:gravity="center_horizontal"
        android:textSize="30dp"
        android:layout_marginTop="88dp"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:hint="Name" />

    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:textColor="#ffffff"
        android:background="#00C4C2"
        android:textColorHint="#ffffff"
        android:textSize="30dp"
        android:id="@+id/mobile"
        android:hint="Mobile Number"
        android:textStyle="bold"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toBottomOf="@+id/name"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="32dp" />

    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:textColor="#ffffff"
        android:background="#00C4C2"
        android:textColorHint="#ffffff"
        android:textSize="30dp"
        android:textStyle="bold"
        android:id="@+id/note"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toBottomOf="@+id/mobile"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="24dp"
        android:hint="Description/Caption" />

    <TextView
        android:text="Please do not upload high quality pictures. We will contact you if needed."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/note"
        android:textColor="#ffffff"
        android:gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.0" />

    <Button
        android:text="      Upload Image      "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mSelectImage"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:textColor="#ffffff"
        android:background="#ED3352"
        android:textStyle="bold"
        android:textSize="25dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent" />
</android.support.constraint.ConstraintLayout>
